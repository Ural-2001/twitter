@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Razor
@* @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers *@
@model IEnumerable<Tweet>
@* @model IEnumerable<Twitter.Models.FileModel> *@
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="text-left mt-3">
    <h3 class="display-6">@ViewData["Title"]</h3>
</div>

<hr/>
<div style="overflow-y: scroll; height: 400px; background-color: #4c8bb1; padding: 10px; border-radius: 20px">
      @foreach (var tweet in Model)
         {
             @await Component.InvokeAsync("Tweet", new { id = tweet.Id })
             <hr/>
         }
</div>
